<header>
  <a href="/"><span>Members</span>Only</a>
  <nav>
    <% if (locals.currentUser) { %>
    <!-- prettier-ignore -->
    <% if (locals.currentUser.member === false) {%>
    <a class="button" href="/join">Become A Member</a>
    <%}%>
    <a class="button margin" href="/message">New Message</a>
    <button class="margin" id="account-button">
      <span>Account</span><i class="fa-solid fa-angle-down"></i>
    </button>
    <div id="account-details" class="account-details">
      <div>
        <p>Signed in as</p>
        <p class="name"><%= locals.currentUser.firstName %></p>
        <p><%= locals.currentUser.email %></p>
      </div>
      <hr />
      <div>
        <p>Membership status</p>
        <p class="member">
          <%= locals.currentUser.member === false ? "Not A Member" : "Member" %>
        </p>
      </div>
      <hr />
      <div class="logout">
        <a class="button" href="/logout">Logout</a>
      </div>
    </div>
    <% } else { %>
    <a class="button" href="/signup">Sign Up</a>
    <a class="button margin" href="/login">Log In</a>
    <% } %>
  </nav>
</header>
<script src="/javascripts/accountScript.js" defer></script>
